@import '../node_modules/bootstrap/dist/css/bootstrap.css'
@import '../node_modules/font-awesome/css/font-awesome.css'
@import '../node_modules/leaflet/dist/leaflet.css'

body
  padding 70px 0

a
  cursor pointer

// Make sure ng-select dropdown is not hidden by ngx-mydatepicker
select-dropdown > div
  z-index 3 !important

.page-header
  margin-top 0

  h1
    margin-top 0.4em
    margin-bottom 0.1em
    font-size 2em
    font-variant small-caps

  .btn-group
    padding-top 0

.empty
  color #c0c0c0

@media print
  body
    padding 0
